<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mashup.healthyup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthyUp"
        android:name=".HelltabusApplication">
        <activity android:name="com.mashup.presentation.features.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mashup.presentation.features.login.LoginActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.mashup.presentation.features.WebViewActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.mashup.presentation.features.ExerciseDashboardActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>
